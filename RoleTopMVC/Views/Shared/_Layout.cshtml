                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href='@Url.Action("Index", "Home")#signup'>CADASTRE-SE</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="login">LOGIN</a></li>
                    </ul>
                </div>
            </section>
        </nav>
        <div id="logo-area">
            <img src="img/47778.png">
        </div>
    </header>

@RenderBody()

